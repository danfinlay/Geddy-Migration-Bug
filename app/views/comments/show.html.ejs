<div class="hero-unit">
  <h2 class="id"><%= comment.id %></h2>
  <%- linkTo('Edit this comment', editCommentPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', commentPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Comment Properties</h2>
<% for(var i in comment) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= comment[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>